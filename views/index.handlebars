<div class="row">
    <div class="col-12">
        <h1 class="text-center">Eat the Burger!</h1>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <h2>Burgers that have not been eaten:</h2>

        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devour=true}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <h2>Burgers that have been eaten:</h2>

        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{> burger-block2 devour=false}}
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h2 class="text-center">Add a Burger</h2>
    </div>
</div>

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form class="create-form">

        <div class="form-group">
            <label for="bu">Type of Burger:</label>
            <input type="text" id="bu" name="name">
        </div>

        <button class="btn btn-warning" type="submit">Add Burger</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>